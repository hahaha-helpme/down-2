meta(charset='UTF-8')
meta(name='viewport', content='width=device-width, initial-scale=1.0')
meta(http-equiv='X-UA-Compatible', content='ie=edge')

//- canonical (to the https version with or without www, but choose one)
link(rel='canonical', href= viewLocals.head.canonical)

//- robots meta tag - klopt zo
meta(name='robots', content= 'index,follow')

//- title
title= viewLocals.head.title

//- description
meta(name='description', content= viewLocals.head.description)

//- opengraph
meta(property='og:type', content='website')
meta(property='og:image:height', content='1257')
meta(property='og:image:width', content='2400')
meta(property='og:description', content= viewLocals.head.opengraph.description)
meta(property='og:url', content= viewLocals.head.opengraph.url)
meta(property='og:image', content= viewLocals.head.opengraph.image)
meta(property='og:title', content=viewLocals.head.opengraph.title)

//- favicon
link(rel='apple-touch-icon', sizes='180x180', href= viewLocals.head.favicon.appleTouchIcon)
link(rel='icon', type='image/png', sizes='32x32', href= viewLocals.head.favicon.favicon32x32)
link(rel='icon', type='image/png', sizes='16x16', href= viewLocals.head.favicon.favicon16x16)
link(rel='manifest', href= viewLocals.head.favicon.siteWebmanifest)
link(rel='mask-icon', href=viewLocals.head.favicon.safariPinnedTab, color='#648fff')
meta(name='apple-mobile-web-app-title', content='Is it down?')
meta(name='application-name', content='Is it down?')
meta(name='msapplication-TileColor', content='#2b5797')
meta(name='theme-color', content='#ffffff')

//- hreflang (let erop dat de laatste een default is en die moet verwijzen naar de engelse variant met het meeste zoekvolume
each item in viewLocals.head.relAlternate
  link(rel='alternate', href= item.href, hreflang= item.hrefLang)